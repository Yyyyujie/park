/* pages/uploadPic/uploadPic.wxss */
@import "/assets/css/stylesheet.wxss";
page{
  width: 100%;
  height: 100%;
}
.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.memberPic{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}
.btns{
  width: 100%;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
  align-items:center;
}
.btnGroup{
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 50%;
}
.btn{
  background: #2937FC;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 30rpx;
  height:80rpx;
  line-height:80rpx;
}
.tip{
  width: 100%;
  background: #E0E1FF;
  color: #2937FC;
  position: fixed;
  top: 0;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.tip .iconfont{
  margin-right: 15rpx;
}
.clear{
  position: absolute;
  right: 0;
  line-height: 80rpx;
  display: block;
  top: 0;
  bottom: 0;
  margin: auto;
  transform: rotate(45deg);
  color: #706F7D;
  font-size: 60rpx;
  font-weight: lighter;
}
.btnGroup{
  padding: 30rpx;
  box-sizing: border-box;
  display:flex;
  align-items:center;
  justify-content:center;
}
.btnGroup .imageBox{
  width:100rpx;
  height:100rpx;
}
.small{
  width: 120rpx;
  height: 120rpx;
}
.small .imageBox{
  width:60rpx;
  height:60rpx;
}